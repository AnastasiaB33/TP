@model CadastrProject.Models.Cadastre
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h2> Удаление записи </h2>

<h3> Вы уверены, что хотите удалить эту запись? </h3>
<div>
    <h4> Запись </h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           №объекта кадастра 
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            Тип кадастра
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Group.Type)
        </dd>
        <dt>
             Адрес
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            Кадастровая стоимость
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt>
            Площадь
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Square)
        </dd>
        <dt>
            Дата подачи заяки
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date_application)
        </dd>
        <dt>
            Владелец
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AspNetUsers.Surname)
            @Html.DisplayFor(model => model.AspNetUsers.Name)
            @Html.DisplayFor(model => model.AspNetUsers.Id)
        </dd>
        <dt>
            Статус
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt>
           Дата регистрации
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date_registration)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться на главную", "Index")
        </div>
    }
</div>

